<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PlantAppMAUI.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <StackLayout
                Grid.Row="0"
                HorizontalOptions="Center"
                Orientation="Vertical"
                VerticalOptions="Center">
                <Label
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Home"
                    VerticalOptions="Center" />
            </StackLayout>
            <StackLayout
                Grid.Row="1"
                HorizontalOptions="Center"
                Orientation="Vertical"
                VerticalOptions="Center">
                <Button
                    Command="{Binding GoToHomeSettingsCommand}"
                    FontSize="20"
                    Text="Home Settings" />
                <Button
                    Command="{Binding GoToPlantDisplayCommand}"
                    FontSize="20"
                    Text="Show Plant" />
                <Button
                    Command="{Binding GoToPlantCreateCommand}"
                    FontSize="20"
                    Text="Create Plant" />
            </StackLayout>
            <StackLayout
                Grid.Row="2"
                HorizontalOptions="Center"
                Orientation="Vertical"
                VerticalOptions="Center">
                <Label
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="Â© 2025 PlantAppMAUI"
                    VerticalOptions="Center" />
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>